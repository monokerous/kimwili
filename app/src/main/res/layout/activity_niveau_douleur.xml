<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeannebertoux.kimwili.Controller.NiveauDouleurActivity">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@+id/btnAjoutDouleur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </com.github.mikephil.charting.charts.LineChart>

    <Button
        android:id="@+id/btnAjoutDouleur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_border"
        android:text="Une douleur ?"
        android:textColor="@android:color/holo_blue_bright" />

    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/linechart"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logokimwili" />
</RelativeLayout>
